<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main">

    <!-- Mood Filter Row (Spinner + TextView) -->
    <LinearLayout
        android:id="@+id/filterRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinnerMoodFilter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp"
            android:entries="@array/mood_filter_options"
            android:layout_marginEnd="16dp"/>

        <!-- Selected Mood Text -->
        <TextView
            android:id="@+id/tvSelectedMood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/edit_text"
            android:text="Selected Mood: All"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/item_mood_history"
        app:layout_constraintTop_toBottomOf="@id/filterRow"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
</androidx.constraintlayout.widget.ConstraintLayout>
